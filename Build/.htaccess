# Unity WebGL (Brotli + Decompression Fallback / .unityweb) for Apache
# Place this file in: /.../Build/.htaccess

<IfModule mod_mime.c>
  RemoveType .unityweb
  RemoveLanguage .unityweb
  AddEncoding br .unityweb

  AddType application/wasm                 .wasm
  AddType application/wasm                 .wasm.unityweb
  AddType application/javascript           .js
  AddType application/javascript           .js.unityweb
  AddType application/octet-stream         .data
  AddType application/octet-stream         .data.unityweb
  AddType application/octet-stream         .symbols.json
  AddType application/octet-stream         .symbols.json.unityweb
</IfModule>

<IfModule mod_deflate.c>
  SetEnvIfNoCase Request_URI \.unityweb$ no-gzip dont-vary
</IfModule>

<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
</IfModule>